<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowIsTranslucent">true</item>
        <item name="android:screenOrientation">portrait</item>

        <item name="android:windowAnimationStyle">@style/Animation_Activity</item>
    </style>

    <style name="Animation_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_right_to_center</item>
        <item name="android:activityOpenExitAnimation">@anim/translate_center_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_left_to_center</item>
        <item name="android:activityCloseExitAnimation">@anim/translate_center_to_right</item>
    </style>


    <!--    水平分隔线样式-->
    <style name="dividingLine_Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/bg_dividing</item>
    </style>

    <!--    magrin15的水平分隔线样式-->
    <style name="dividingLine_Horizontal_Margin15">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:background">@color/bg_dividing</item>
    </style>

    <!--    垂直分隔线样式-->
    <style name="dividingLine_Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.7dp</item>
        <item name="android:background">@color/bg_dividing</item>
    </style>


    <!--    文本样式-->
    <style name="JgTextView_MainColor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/c_333333</item>
    </style>

    <!--    副文本样式-->
    <style name="JgTextView_ViceColor">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/c_666666</item>
    </style>

    <!--    副文本1样式-->
    <style name="JgTextView_Vice1Color">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/c_cccccc</item>
    </style>


    <!--开关样式-->
    <style name="JgSwitchStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
        <item name="android:thumb">@drawable/red_thumb</item>
        <item name="android:thumbTextPadding">10dp</item>
        <item name="android:track">@drawable/red_track</item>
    </style>


    <style name="JgItemTextView_Next" parent="JgTextView_ViceColor">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_right_small</item>
    </style>

</resources>
