<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_radius6_white"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_house"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHomeName"
            style="@style/JgTextView_MainColor"
            android:text="好大一棵树"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/tvLockModel"
            style="@style/JgTextView_ViceColor"
            android:text="帝豪智能门锁T80"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeName"
            app:layout_constraintStart_toStartOf="@+id/tvHomeName"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/sp_16"/>

        <TextView
            style="@style/JgTextView_ViceColor"
            android:text="19:53 儿子使用指纹开锁"
            android:drawableLeft="@drawable/ic_fingerprint"
            app:layout_constraintTop_toBottomOf="@+id/tvLockModel"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="@+id/tvLockModel"
            android:textSize="@dimen/sp_16"/>

        <TextView
            style="@style/JgTextView_ViceColor"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2020-08-10"
            android:textSize="@dimen/sp_14"/>



    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
