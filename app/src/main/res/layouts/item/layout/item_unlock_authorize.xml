<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_radius6_white"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            app:srcCompat="@drawable/ic_smartlock1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHomeName"
            style="@style/JgTextView_MainColor"
            android:text="密码：45454615"
            android:layout_marginStart="@dimen/dp_5"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/tvLockModel"
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_5"
            android:text="创建时间：2019-5-10 12:21"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/tvHomeName"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeName" />


        <TextView
            style="@style/JgTextView_ViceColor"
            android:text="可使用"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvHomeName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvHomeName" />

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@drawable/bg_radius30_blue_line"
            android:text="复制"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/tvHomeName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvHomeName"
            app:layout_constraintTop_toTopOf="@+id/tvHomeName" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>
