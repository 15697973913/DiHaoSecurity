<?xml version="1.0" encoding="utf-8"?><!--    qmui_general_shadow_elevation-->
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/qmui_config_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:qmui_borderColor="?attr/qmui_skin_support_color_separator"
    app:qmui_outerNormalColor="?attr/qmui_skin_support_color_background"
    app:qmui_shadowAlpha="0.3"
    app:qmui_showBorderOnlyBeforeL="true">

    <ImageView
        android:id="@+id/ivLockImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_85"
        android:layout_marginStart="@dimen/dp_25"
        android:src="@mipmap/ic_default_lock" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDeviceName"
                style="@style/JgTextView_MainColor"
                android:text="帝豪T86智能锁"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/tvOnLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/str_off_line"
                android:textColor="@color/select_blue_or_gray"
                android:textSize="@dimen/sp_15"
                app:drawableStartCompat="@drawable/select_circle_r5_gary_or_green" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvDeviceId"
            style="@style/JgTextView_Vice1Color"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/str_deviceid_s_m" />

        <TextView
            android:id="@+id/tvGroup"
            style="@style/JgTextView_Vice1Color"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/str_group_s_m" />


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_10"
        app:srcCompat="@drawable/ic_arrow_right" />


</com.qmuiteam.qmui.layout.QMUILinearLayout>



