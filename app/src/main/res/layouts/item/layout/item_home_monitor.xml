<?xml version="1.0" encoding="utf-8"?><!--    qmui_general_shadow_elevation-->
<com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/qmui_config_color_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:qmui_borderColor="?attr/qmui_skin_support_color_separator"
    app:qmui_outerNormalColor="?attr/qmui_skin_support_color_background"
    app:qmui_shadowAlpha="0.3"
    app:qmui_showBorderOnlyBeforeL="true">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_login_banner" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="家门口"
            android:textColor="@color/c_B2B8C8"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tvOnLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_weight="1"

            android:drawablePadding="@dimen/dp_5"
            android:text="@string/str_off_line"
            android:textColor="@color/select_blue_or_gray"
            android:textSize="@dimen/sp_16"
            app:drawableStartCompat="@drawable/select_circle_r5_gary_or_green" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_40"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@mipmap/ic_more" />


    </LinearLayout>

</com.qmuiteam.qmui.layout.QMUILinearLayout>



