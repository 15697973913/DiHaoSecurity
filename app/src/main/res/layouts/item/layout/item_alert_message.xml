<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/bg_radius6_white"
        android:paddingBottom="@dimen/dp_15">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            app:srcCompat="@drawable/ic_house"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvHomeName"
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_5"
            android:text="好大一棵树"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/tvLockModel"
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_5"
            android:text="帝豪智能门锁T80"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="@+id/tvHomeName"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeName" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_default_home"
            app:layout_constraintStart_toStartOf="@+id/tvLockModel"
            app:layout_constraintTop_toBottomOf="@+id/tvLockModel" />

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="请注意，门锁有被撬动"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@+id/ivImage"
            app:layout_constraintTop_toTopOf="@+id/ivImage" />

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:text="21:21:21"
            android:textSize="@dimen/sp_15"
            app:layout_constraintBottom_toBottomOf="@+id/ivImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivImage" />

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/str_pending"
            android:textSize="@dimen/sp_14"
            app:layout_constraintBottom_toBottomOf="@+id/ivImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_5"
            android:text="2020-08-10"
            android:textSize="@dimen/sp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_radius30_blue_line"
            android:gravity="center"
            android:text="@string/str_ignore"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintRight_toLeftOf="@id/tvAlert"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" />

        <TextView
            android:id="@+id/tvAlert"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_radius30_red"
            android:gravity="center"
            android:text="@string/str_alert"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
