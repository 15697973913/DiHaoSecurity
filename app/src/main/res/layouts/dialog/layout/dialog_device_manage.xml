<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_32"
    android:layout_marginEnd="@dimen/dp_32"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvAlertMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="@string/str_alert_msg"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_17"
            app:drawableTopCompat="@mipmap/ic_alarm_msg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="@string/str_device_share"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_17"
            app:drawableTopCompat="@mipmap/ic_device_share" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDeviceDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="@string/str_device_detail"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_17"
            app:drawableTopCompat="@mipmap/ic_device_detail" />

        <TextView
            android:id="@+id/tvAllVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="@string/str_all_video"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_17"
            app:drawableTopCompat="@mipmap/ic_all_video" />

    </LinearLayout>

</LinearLayout>
