<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_default"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:title="生成密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        android:background="@drawable/bg_radius6_white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_15">
        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            app:srcCompat="@drawable/ic_smartlock1"
            android:scaleType="fitXY"/>

        <TextView
            style="@style/JgTextView_MainColor"
            android:text="5445315431"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_24"/>

        <TextView
            style="@style/JgTextView_Vice1Color"
            android:text="一次性密码5分钟有效"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tvCopyPassWord"
            style="@style/JgTextView_ViceColor"
            android:text="复制密码"
            android:layout_height="@dimen/dp_40"
            android:layout_width="@dimen/dp_130"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:background="@drawable/bg_radius30_blue_line"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_16"/>

    </LinearLayout>

</LinearLayout>