<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:rightTextColor="@color/colorPrimary"
        app:title="添加成员" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_15"
            android:text="昵称"
            android:textSize="@dimen/sp_15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:hint="请输入家庭成员昵称"
            android:background="@null"
            android:textSize="@dimen/sp_15"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_15"
            android:text="手机号码"
            android:textSize="@dimen/sp_15"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:hint="请输入家庭成员手机号码"
            android:background="@null"
            android:textSize="@dimen/sp_15"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_15"
            android:text="验证码"
            android:textSize="@dimen/sp_15"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:hint="请输入验证码"
            android:background="@null"
            android:textSize="@dimen/sp_15"/>

        <TextView
            style="@style/JgTextView_ViceColor"
            android:text="获取验证码"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/sp_15"/>


    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/bg_radius50_gradient_blue"
        android:text="@string/str_confirm"
        android:textColor="@color/white" />

</LinearLayout>