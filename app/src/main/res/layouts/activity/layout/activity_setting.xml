<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_default"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:title="设置" />

    <LinearLayout
        android:id="@+id/linUserData"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@mipmap/ic_default_head"
            app:qmui_corner_radius="@dimen/dp_25" />

        <TextView
            style="@style/JgItemTextView_Next"
            android:text="好大两个枣"
            android:textColor="@color/c_333333" />


    </LinearLayout>


    <TextView
        android:id="@+id/tvAccountSecurity"
        style="@style/JgItemTextView_Next"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:text="@string/str_account_and_security"
        android:textColor="@color/c_333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_weight="1"
            android:text="@string/str_version_code"
            android:textColor="@color/c_333333" />

        <TextView
            style="@style/JgTextView_ViceColor"
            android:text="v6.21"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <TextView
        style="@style/JgItemTextView_Next"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:text="@string/str_check_for_updates"
        android:textColor="@color/c_333333" />


    <TextView
        style="@style/JgItemTextView_Next"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:text="@string/str_privacy_policy"
        android:textColor="@color/c_333333" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/str_loginout" />


</LinearLayout>