<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:title="添加设备" />

    <TextView
        android:id="@+id/textView2"
        style="@style/JgTextView_ViceColor"
        android:layout_marginTop="@dimen/dp_20"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="@string/str_add_smart_lock"
        app:drawableLeftCompat="@drawable/ic_smartlock" />

    <LinearLayout
        android:id="@+id/linQrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@drawable/bg_radius50_white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:drawablePadding="@dimen/dp_25"
            android:gravity="center"
            android:text="二维码扫描"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            app:drawableLeftCompat="@drawable/ic_qrcode"
            app:layout_constraintHorizontal_bias="1.0" />
    </LinearLayout>

    <TextView
        style="@style/JgTextView_ViceColor"
        android:layout_marginTop="@dimen/dp_60"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="@string/str_add_smart_lock"
        app:drawableLeftCompat="@drawable/ic_monitor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@drawable/bg_radius50_white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:drawablePadding="@dimen/dp_25"
            android:gravity="center"
            android:text="热点搜索"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            app:drawableLeftCompat="@drawable/ic_qrcode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@drawable/bg_radius50_white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:drawablePadding="@dimen/dp_25"
            android:gravity="center"
            android:text="局域网扫描"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            app:drawableLeftCompat="@drawable/ic_qrcode"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_50"
        android:background="@drawable/bg_radius50_white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_70"
            android:drawablePadding="@dimen/dp_25"
            android:gravity="center"
            android:text="声波配网"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_18"
            app:drawableLeftCompat="@drawable/ic_qrcode"
            app:layout_constraintHorizontal_bias="1.0" />
    </LinearLayout>

</LinearLayout>