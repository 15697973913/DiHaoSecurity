<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_default"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:rightContent="保存"
        app:rightTextColor="@color/colorPrimary"
        app:title="设置" />


    <LinearLayout
        android:id="@+id/linHead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ivHead"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@mipmap/ic_default_head"
            app:qmui_corner_radius="@dimen/dp_25" />

        <TextView
            style="@style/JgItemTextView_Next"
            android:text="好大两个枣"
            android:textColor="@color/c_333333" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_weight="1"
            android:text="@string/str_nick_name"
            android:textColor="@color/c_333333" />

        <EditText
            style="@style/JgTextView_ViceColor"
            android:drawableEnd="@drawable/ic_arrow_right_small"
            android:drawablePadding="@dimen/dp_5"
            android:background="@null"
            android:text="好大两棵树"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>