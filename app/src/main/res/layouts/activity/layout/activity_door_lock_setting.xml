<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:title="门锁设置" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="常开模式" />

                <Switch
                    android:id="@+id/swMsgHint"
                    style="@style/JgSwitchStyle"
                    android:checked="true"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="验证模式" />

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center"
                android:text="设备音量调节" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_volume_min" />

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_volume_max" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="#F2F2F2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="设备设置" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="NFC设置" />

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="特殊人员出入时间设置" />

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="网络配置" />

                <TextView
                    style="@style/JgItemTextView_Next"
                    android:layout_width="wrap_content"
                    android:text="TP-lils224"
                    android:textColorHint="@color/c_cccccc" />

            </LinearLayout>


            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="SD卡设置" />

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="固件升级" />

                <TextView
                    style="@style/JgItemTextView_Next"
                    android:layout_width="wrap_content"
                    android:text="21.351.32132"
                    android:textColorHint="@color/c_cccccc" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="#F2F2F2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="录像设置" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="清晰度" />

                <TextView
                    style="@style/JgItemTextView_Next"
                    android:layout_width="wrap_content"
                    android:text="清晰"
                    android:textColorHint="@color/c_cccccc" />

            </LinearLayout>

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="定时" />

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="本地录像计划" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="#F2F2F2"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:text="报警设置" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="移动侦测感应强度" />

                <TextView
                    style="@style/JgItemTextView_Next"
                    android:layout_width="wrap_content"
                    android:text="中等"
                    android:textColorHint="@color/c_cccccc" />

            </LinearLayout>

            <View style="@style/dividingLine_Horizontal_Margin15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="移动侦测时长" />

                <TextView
                    style="@style/JgItemTextView_Next"
                    android:layout_width="wrap_content"
                    android:text="5秒"
                    android:textColorHint="@color/c_cccccc" />

            </LinearLayout>

            <View style="@style/dividingLine_Horizontal_Margin15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="人体红外报警" />

                <Switch
                    style="@style/JgSwitchStyle"
                    android:checked="true"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <View style="@style/dividingLine_Horizontal_Margin15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <TextView
                    style="@style/JgTextView_ViceColor"
                    android:layout_weight="1"
                    android:text="特殊人员按时出入提醒" />

                <Switch
                    style="@style/JgSwitchStyle"
                    android:checked="true"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#F2F2F2" />

            <TextView
                style="@style/JgItemTextView_Next"
                android:text="特殊人员出入时间设置" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#F2F2F2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:text="解除绑定"
                android:gravity="center"
                android:textColor="@color/red" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="#F2F2F2" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>