<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:rightContent="添加"
        app:rightTextColor="@color/colorPrimary"
        app:title="选择成员" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linGroup1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ivHead2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@mipmap/ic_default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_corner_radius="@dimen/dp_25" />

        <TextView
            android:id="@+id/tvName2"
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_10"
            android:text="好大一头猪"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@+id/ivHead2"
            app:layout_constraintTop_toTopOf="@id/ivHead2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_radius10_ff72a4"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:text="儿子"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@+id/ivHead2"
            app:layout_constraintTop_toBottomOf="@id/tvName2" />

        <ImageView
            android:id="@+id/ivGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_checkbox_no" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View style="@style/dividingLine_Horizontal" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linGroup2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ivHead1"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_15"
            android:src="@mipmap/ic_default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_corner_radius="@dimen/dp_25" />

        <TextView
            android:id="@+id/tvName1"
            style="@style/JgTextView_MainColor"
            android:layout_marginStart="@dimen/dp_10"
            android:text="好大一头牛"
            android:textSize="@dimen/sp_15"
            app:layout_constraintStart_toEndOf="@+id/ivHead1"
            app:layout_constraintTop_toTopOf="@id/ivHead1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@drawable/bg_radius10_ff72a4"
            android:gravity="center"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:text="儿子"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            app:layout_constraintStart_toEndOf="@+id/ivHead1"
            app:layout_constraintTop_toBottomOf="@id/tvName1" />

        <ImageView
            android:id="@+id/ivGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_checkbox_no" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View style="@style/dividingLine_Horizontal" />

    <View
        android:layout_width="@dimen/dp_10"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/bg_radius50_gradient_blue"
        android:text="@string/str_confirm"
        android:textColor="@color/white" />
</LinearLayout>