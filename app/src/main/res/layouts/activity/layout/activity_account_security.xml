<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:rightTextColor="@color/colorPrimary"
        app:title="账号与安全" />


    <LinearLayout
        android:id="@+id/linPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <TextView
            style="@style/JgTextView_ViceColor"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_weight="1"
            android:text="@string/str_phone_number"
            android:textColor="@color/c_333333" />

        <EditText
            style="@style/JgTextView_ViceColor"
            android:drawableEnd="@drawable/ic_arrow_right_small"
            android:drawablePadding="@dimen/dp_5"
            android:background="@null"
            android:text="15684651246"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>


    <TextView
        android:id="@+id/linPassword"
        style="@style/JgItemTextView_Next"
        android:text="@string/str_modify_password"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/white"
        android:textColor="@color/c_333333" />


</LinearLayout>