<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout_default"
    android:orientation="vertical">

    <com.fengdi.baseproject.mvp.ui.widget.MyToolBar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isNeedStatusbarPadding="true"
        app:rightContent="@string/str_add"
        app:rightTextColor="@color/colorPrimary"
        app:title="@string/str_authorize_manage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyAuthorizeManage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_authorize_manage"
        />

</LinearLayout>