<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#F9F9F9" />
            <!--设置渐变色 angle=0 从左到右渲染，angle=90从上到下渲染，angle=180 从右到左渲染，-->
            <gradient android:angle="45"
                android:centerColor="#F9F9F9"
                android:endColor="#F9F9F9"
                android:startColor="#F9F9F9" android:type="linear" />
            <!--设置角的弧度-->
            <corners android:radius="@dimen/dp_50" />
            <!--设置边框以及弧度-->
            <stroke android:width="1dp" android:color="#F9F9F9" />
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <!--点击之后的颜色-->
            <solid android:color="#F9F9F9" />
            <!--设置角的弧度-->
            <corners android:radius="@dimen/dp_50" />
            <!--点击之后的边框-->
            <stroke android:width="1dp" android:color="#F9F9F9" />

            <gradient android:angle="45" android:centerColor="#F9F9F9"
                android:endColor="#F9F9F9" android:startColor="#F9F9F9" android:type="linear" />

        </shape>
    </item>
</selector>